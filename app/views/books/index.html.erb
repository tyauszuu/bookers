<h1>Books</h1>

<table>
 <thead>
  <tr>
   <th>Title</th>
   <th>Body</th>
   <th colspan="3"></th>
  </tr>
 </thead>
 <tbody>
<% @books.each do |book| %>
 <tr>
  <tb>><%= book.title %></tb>
  <tb><%= book.body %></tb>
  <tb><%= link_to "Show", book_path(book.id) %></tb>
  <tb><%= link_to "Edit", edit_book_path(book.id) %></tb>
  <tb><%=link_to "Destroy",destroy_book_path(book.id),method: :delete,"data-confirm"=>"Are you sure?" %></tb>
 </tr>
 </tbody>
 <% end %>
 </table>

<%= form_with model:@book,url:'/books',method: :post do |f| %>
 <h4>Title</h4>
 <%= f.text_field:title %>
 <h4>Body</h4>
 <%= f.text_area:body %>
 <%= f.submit 'Create Book' %>
<% end %>